---
const { title, isAjax = false, preview = false } = Astro.props;
---

{
    !isAjax && (
        <html lang='en'>
            <head>
                <meta charset='utf-8' />
                <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
                <meta name='viewport' content='width=device-width' />
                <meta name='generator' content={Astro.generator} />
                <title>{title}</title>
            </head>
            <body>
                <div id='__CONTENT'>
                    <slot />
                </div>
                {preview && <script src='/ajaxPreview.js' is:inline />}
            </body>
        </html>
    )
}

{isAjax && <slot />}
